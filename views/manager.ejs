                    if (inputValue === false) return false;

                    if (inputValue === "") {
                        swal.showInputError("請輸入需關閉container的Mac Address");
                        return false
                    }

                    $.ajax({
                        type: "post",
                        url:   dataAPI + "/stopContainer",
                        async: true,
                        data: JSON.stringify({
                            idAddress: address,
    			            mac:inputValue
                        }),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (data) {
    			            let resStopContainer=data;
            			    if(resStopContainer.status=="true"){
                			    swal(inputValue + "的container已停止", data.status, "success");

        	                        $.ajax({
                	                    type: "put",
                        	            url: dataAPI + '/stopWatch',
                                	    async: true,
        	                            data: JSON.stringify({
                	                        idAddress: address
                        	            }),
                                	    contentType: "application/json; charset=utf-8",
        	                            dataType: "json",
                	                    success: function (data) {
                        	                swal("container已停止&監聽關閉", data.status, "success")
                                	    }
        	                        });
                    		}else{
                    			swal("請重新檢查一次輸入的Mac Address");
                    		}
                        }
                    });
            });
    		resolve();
	    });
	    promise.then(function(full){
	    	$('.swal-text').append(`<table id="allDevice" class="display" width="90%"></table>`);	
			$.ajax({
				url:dataAPI + "/getAllDevice",
				method:'GET',
				success:function(res){
					let aliveDevice=[];
					let data=JSON.parse(res);
					if(data.status=="false"){
					
					}else{
						for(let i=0;i<data.allDevice.length ;i++){
							let status=data.allDevice[i].split('#');
							let mac=status[0];
							status=status[1];
	
							if(status=='null')
								aliveDevice.push([mac,'alive']);
							else
								aliveDevice.push([mac,`${status} ID start`]);
					
						$('#allDevice').DataTable( {
        						data: aliveDevice,
							columns: [{ title: "Mac address" },{ title:"Status"}]});
						}
				
						$(".swal-content__input").attr("placeholder", "請輸入Mac Address 以關閉Container");
					}
				}
				
			});
	    })


