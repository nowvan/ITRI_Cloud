    //啟動裝置開始記錄上傳資料 以及 開始雲端上將鏈上資料抓到資料庫裡
    function triggerStart(address) {
        // alert("Start contract : "+address)
	    let promise=new Promise(function(resolve){
	    
    	    swal({
                    title: "啟動container",
    		text: " ",
                content: "input",
                button: {
                    text: "啟動!",
                    closeModal: false,
                }

            }).then((inputValue)=>{
                    if (inputValue === false) return false;

                    if (inputValue === "") {
                        swal.showInputError("請輸入需啟動container的IP");
                        return false
                    }
    		                 // swal("非常好！", "你输入了：" + inputValue, "success");
                    $.ajax({
                        type: "post",
                        url:dataAPI + "/startContainer",
                        async: true,
                        data: JSON.stringify({
                            idAddress: address,
    			            mac:inputValue
                        }),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (data) {
    			            console.log(data);
                            let resStopContainer=data;
                			if(resStopContainer.status=="true"){

                				swal(inputValue + "的container已啟動", data.status, "success");
                                	$.ajax({
                        	            type: "put",
                	                    url: dataAPI + '/startWatch',
                                        async: true,
                                	    data: JSON.stringify({
                        	                idAddress: address
                	                    }),
                                        contentType: "application/json; charset=utf-8",
                                	    dataType: "json",
                        	            success: function (data) {
                	                        swal("container已啟動&監聽啟用", data.status, "success")
                                        }
                                	});
                			}else{
                				swal("請重新檢查一次輸入的Mac Address");
                			}
                        }
                    });
                });
    		resolve();
    	});
	    promise.then(function(full){
		    $('.swal-text').append(`<table id="allDevice" class="display" width="90%"></table>`);	
			$.ajax({
				url:dataAPI + "/getAllDevice",
				method:'GET',
				success:function(res){
					let aliveDevice=[];
					let data=JSON.parse(res);
					if(data.status=="false"){
					
					}else{
						for(let i=0;i<data.allDevice.length ;i++){
							let status=data.allDevice[i].split('#');
							let mac=status[0];
							status=status[1];
	
							if(status=='null')
								aliveDevice.push([mac,'alive']);
							else
								aliveDevice.push([mac,`${status} ID start`]);
					
						$('#allDevice').DataTable( {
        						data: aliveDevice,
							columns: [{ title: "Mac address" },{ title:"Status"}]});
						}
				
						$(".swal-content__input").attr("placeholder", "請輸入Mac Address 以啟動Container");
					}
				}
			});
	    });
    }

    //關閉裝置開始記錄上傳資料 以及 結束雲端上將鏈上資料抓到資料庫裡
